# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           quill.controllers.Application.index

# Authentication
GET     /api/authenticate/:provider     securesocial.controllers.ProviderController.authenticate(provider)
POST    /api/authenticate/:provider     securesocial.controllers.ProviderController.authenticateByPost(provider)
GET     /api/login                      securesocial.controllers.LoginPage.login
GET     /api/logout                     securesocial.controllers.LoginPage.logout


# Statement routes
POST    /api/statement              quill.controllers.StatementController.add
GET     /api/statement/:id          quill.controllers.StatementController.getPublished(id)
GET     /api/statement/:id/edit     quill.controllers.StatementController.getForEdit(id)
POST    /api/statement/:id/publish  quill.controllers.StatementController.publish(id)
PUT     /api/statement/:id          quill.controllers.StatementController.update(id: String)


# Feedback routes
POST    /api/feedback               quill.controllers.FeedbackController.add
GET     /api/feedback               quill.controllers.FeedbackController.list


# TODO: remove, used so securesocial assets use the correct url
GET     /*file                      controllers.Assets.at(path="/public", file)


